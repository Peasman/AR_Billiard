\usepackage{tudo}

\mode<presentation>

\useoutertheme[subsection=false]{navbarbottom_TUDortmund}
\usefonttheme{default}

%\definecolor{mycol}{rgb}{0.72,0.85,0.27}
%\definecolor{logogreen}{rgb}{0.8,0.79,0.74}

\useinnertheme[shadow=true]{rounded}
\usecolortheme{orchid}
\usecolortheme{whale}

\setbeamercolor{frametitle}{fg=black}
\setbeamercolor{frametitle}{bg=lightgreen}

\setbeamercolor{navbar}{bg=lightgreen}

\setbeamercolor{item}{fg=darkgreen}
\setbeamercolor{subitem}{fg=darkgreen}
\setbeamercolor{subsubitem}{fg=darkgreen}

\setbeamercolor{navbar}{fg=black}
\setbeamercolor{titlelike}{fg=black,bg=lightgreen}

\setbeamercolor{block title}{fg=black}
\setbeamercolor{block title}{bg=lightgreen}
\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!30!bg}

\setbeamercolor{palette primary}{fg=lightyellow,bg=darkgreen!70}
\setbeamercolor{palette secondary}{fg=lightyellow,bg=darkgreen!80}
\setbeamercolor{palette tertiary}{fg=lightyellow,bg=darkgreen!90}
\setbeamercolor{palette quaternary}{fg=lightyellow,bg=darkgreen}

\setbeamercolor{text}{fg=black!80!darkgreen}
\setbeamercolor{section in toc}{fg=black!80!darkgreen}
\setbeamercolor{subsection in toc}{fg=black!80!darkgreen}

\setbeamercolor{author in head/foot}{fg=black,parent=section in head/foot}
\setbeamercolor{section in head/foot}{fg=black,parent=palette quaternary}
\setbeamercolor{subsection in head/foot}{fg=black,parent=palette primary}
\setbeamercolor{title in head/foot}{fg=black}

